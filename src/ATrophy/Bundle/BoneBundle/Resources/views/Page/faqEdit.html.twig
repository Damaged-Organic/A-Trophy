{# src/ATrophy/Bundle/BoneBundle/Resources/views/Page/faqEdit.html.twig #}
{% extends 'ATrophyBoneBundle::layout.html.twig' %}

{% set title = "Добавление пункта \"Вопрос-ответ\"" %}

{% block head %}
    <title>{{ title }} - DEM</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="robots" content="noindex, nofollow">
    <link rel="icon" type="image/png" href="{{ asset('bundles/atrophybone/images/favicon.png') }}">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/atrophybone/css/faq.css') }}">
{% endblock %}

{% block body %}
    <div class="page">
        {% include 'ATrophyBoneBundle:Common:header.html.twig' with { 'title': title } only %}
        <section class="content faqZone">
            <form action="{{ path('atrophy_bone_faq', { 'faqId': faq.id, 'action': "update" }) }}" method="POST" id="faq" autocomplete="off">
                <div class="wrap circleGradient">
                    <label for="question">Вопрос</label>
                    <textarea name="faq[question]" id="question" placeholder="Введите текст вопроса">{{ faq.question }}</textarea>
                    <label for="answer">Ответ</label>
                    <textarea name="faq[answer]" id="answer" placeholder="Введите ответ на вопрос">{{ faq.answer }}</textarea>
                </div>
                <button type="submit">сохранить</button>
                <div class="dangerArea">
                    <hr><a href="{{ path('atrophy_bone_faq', { 'faqId': faq.id, 'action': "delete" }) }}" class="delete confirm">удалить</a><hr>
                </div>
            </form>
        </section>
        <div class="confirmArea">
            <span class="choose fa fa-trash-o" data-choice="true"></span>
            <span class="choose fa fa-times-circle-o" data-choice="false"></span>
        </div>
    </div>
    {% include 'ATrophyBoneBundle:Common:footer.html.twig' %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="{{ asset('bundles/atrophybone/js/lib/confirmation.js') }}"></script>
    <script>
        $(function() {
            confirm.init();
        });
    </script>
{% endblock %}